<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_dashboard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:src="@drawable/man"
            app:civ_border_color="@color/custom_black"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name_profile_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text=""
            android:textColor="@color/opposite_theme_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/phone_profile_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_bold"
            android:text="+91 xxxx xxx xxx"
            android:textColor="@color/opposite_theme_color"
            android:textSize="18sp" />

        <LinearLayout
            android:gravity="center"
            android:id="@+id/btn_edit_profile_fragment"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:src="@drawable/edit_profile"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/opposite_theme_color"
                android:textSize="18sp"
                app:fontFamily="@font/inter_semibold" />
            <ImageView
                android:layout_marginEnd="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/btn_change_password_profile_fragment"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:src="@drawable/change_password"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Change Password"
                android:textAllCaps="false"
                android:textColor="@color/opposite_theme_color"
                android:textSize="18sp"
                app:fontFamily="@font/inter_semibold" />
            <ImageView
                android:layout_marginEnd="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/btn_address_profile_fragment"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:src="@drawable/location"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Address"
                android:textAllCaps="false"
                android:textColor="@color/opposite_theme_color"
                android:textSize="18sp"
                app:fontFamily="@font/inter_semibold" />
            <ImageView
                android:layout_marginEnd="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/btn_app_info_profile_fragment"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:src="@drawable/information"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="App Information"
                android:textAllCaps="false"
                android:textColor="@color/opposite_theme_color"
                android:textSize="18sp"
                app:fontFamily="@font/inter_semibold" />
            <ImageView
                android:layout_marginEnd="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/btn_sign_out_fragment"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="10dp"
                android:src="@drawable/sign_out"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Sign Out"
                android:textAllCaps="false"
                android:textColor="@color/opposite_theme_color"
                android:textSize="18sp"
                app:fontFamily="@font/inter_semibold" />
            <ImageView
                android:layout_marginEnd="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>