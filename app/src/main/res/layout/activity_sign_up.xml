<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/logoImageViewSignUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/elite_works_logo"
        android:adjustViewBounds="true"
        android:layout_marginTop="30dp"
        app:layout_constraintDimensionRatio="H, 20:7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/signUp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/text_view"
        android:textSize="32sp"
        android:layout_marginTop="20sp"
        app:fontFamily="@font/poppins_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImageViewSignUp" />

    <LinearLayout
        android:id="@+id/ll_email_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp_title">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="-10dp"
            android:gravity="center"
            android:paddingTop="8dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="12dp"
                android:src="@drawable/email" />
        </androidx.cardview.widget.CardView>
        <EditText
            android:id="@+id/et_email_signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            app:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textColor="@color/edit_text_ip"
            android:textColorHint="@color/edit_text_hint"
            android:background="@drawable/edit_text_background"
            android:hint="Email Id">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_email_signup">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="-10dp"
            android:gravity="center"
            android:paddingTop="8dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="15dp"
                android:src="@drawable/password_lock" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/et_password_signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_background"
            android:hint="Password"
            android:textSize="15sp"
            app:fontFamily="@font/poppins"
            android:paddingStart="20dp"
            android:inputType="textPassword"
            android:textColor="@color/edit_text_ip"
            android:textColorHint="@color/edit_text_hint">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_confirm_password_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_password_signup">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="-10dp"
            android:gravity="center"
            android:paddingTop="8dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="15dp"
                android:src="@drawable/confirm_password_lock" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/et_confirm_password_signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_background"
            android:hint="Confirm Password"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="@color/edit_text_ip"
            android:textColorHint="@color/edit_text_hint"
            app:fontFamily="@font/poppins"/>
    </LinearLayout>
    <!--    add buttons-->
</androidx.constraintlayout.widget.ConstraintLayout>